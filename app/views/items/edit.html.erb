<h1> Update item: </h1>

<%= form_tag "/items/#{@item.id}", method: :patch do %>
  <div>
     Name: <input type="text" name= "name" value="<%=@item.name%>">
  </div>
  <div>
     Price: <input type="text" name= "price" value="<%=@item.price%>">
  </div>
  <div>
     Description: <input type="text" name= "description" value="<%=@item.description%>">
  </div>

  

 <p> <button type ="submit" class="btn btn-default btn-lg">Update!</button>
</p>
<% end %>
